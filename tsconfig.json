{
  "compilerOptions": {
    "moduleResolution": "node",   // Ensures TypeScript resolves modules like Node.js
    "module": "esnext",  // This is required for import.meta support
    "target": "esnext",  // Optionally set the target to a modern version
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",               // Ensure TypeScript can find modules in root directory
    "paths": {                    // Optional: Define any custom paths
      "@reduxjs/*": ["node_modules/@reduxjs/*"],
      "redux-logger": ["node_modules/redux-logger"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}